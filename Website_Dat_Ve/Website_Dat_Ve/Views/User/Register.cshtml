
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Register" />
    <link href="~/Content/style_login.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="background-login"></div>
    <!--header-->
    <div class="header-w3l">
        <h1>ĐĂNG KÝ CHO KHÁCH HÀNG</h1>
    </div>
    <!--//header-->
    <div class="main-content-agile">
        <div class="sub-main-w3">
            <h2>Đăng ký</h2>
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                <form action="#" method="post">
                    <div class="pom-agile">
                        <span class="fa fa-user" aria-hidden="true"></span>
                        <input placeholder="Họ và tên" name="Name" class="name" type="text" required="">
                    </div>
                    <div class="pom-agile">
                        <span class="fa fa-phone" aria-hidden="true"></span>
                        <input placeholder="Số điện thoại" name="NumberPhone" class="phone" type="text" required="">
                    </div>
                    <div class="pom-agile" style="margin-top:20px">
                        <span class="fa fa-envelope-o" aria-hidden="true"></span>
                        <input placeholder="Email" name="Email" class="email" type="email" required="">
                    </div>
                    <div class="pom-agile" style="margin-top:20px">
                        <span class="fa fa-map-marker" aria-hidden="true"></span>
                        <input placeholder="Địa chỉ" name="Address" class="address" type="text" required="">
                    </div>
                    <div class="pom-agile" style="margin-top:20px">
                        <span class="fa fa-key" aria-hidden="true"></span>
                        <input placeholder="Password" name="Password" class="pass" type="password" required="">
                    </div>
                    <div class="right-w3l" style="margin-top:20px">
                        <input type="submit" value="Đăng ký">
                    </div>
                </form>
            }
            <p style="color:white; margin-top:20px">
                Bạn đã có tài khoản?
                <a href="@(Url.Action("Login", "User"))" style="color:yellow">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
    <!--//main-->
</body>
<script type="application/x-javascript">
    addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
    }, false);

    function hideURLbar() {
        window.scrollTo(0, 1);
    }
</script>

