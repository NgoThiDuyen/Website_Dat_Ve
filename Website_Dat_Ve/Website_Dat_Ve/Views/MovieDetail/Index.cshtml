@model Website_Dat_Ve.Models.MovieVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Chi tiết phim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Detail" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <style>
        .table_binhluan {
            margin-top: 40px;
            display: block;
            width: 100%;
            background-color: #fff;
        }
        .nav-link{
            color:white
        }
        .nav-link:hover{
            color:yellow
        }
     
        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            color: #fff;
            background-color: darkgreen;
        }
    </style>
</head>
<body>
    <div class="container content-detail">
        <div class="container text-center">
            <h3 style="color:green; font-weight:bold;font-size:2rem">CHI TIẾT PHIM</h3>
            <img style="width:200px;height:70px; margin-bottom:20px;justify-content:center" src="~/Uploads/movie.png" />
        </div>
        <div class="row" style="margin-bottom:40px">
            <div class="col-md-3">
                <img style="width:100%;height:380px" src="https://apirapphimdvh.bsite.net/@Model.Image" />
            </div>
            <div class="col-md-9">
                <div class="row">
                    <h4 style="color:green; font-weight:bold">@Model.Name</h4>
                    <hr style="height:1px;opacity:1; border:none;color:green;background-color:green;" />
                    <div class="col-md-5">
                        <p>Loại phim: @Model.MovieType</p>
                        <p>Đạo diễn: @Model.Author</p>
                        <p>Diễn viên: @Model.Cast</p>
                        <p>Thời lượng: @Model.Time</p>
                        <p>Khởi chiếu: @Model.ReleaseDate</p>
                        <p>Lượt xem: @Model.NumberView</p>
                        <a class="btn" href="@Url.Action("OrderPlan", "OrderTicket")" 
                           style="color: white; background-color: green; border-radius: 10px; padding-top: 10px; padding-bottom: 10px; padding-left: 30px; padding-right: 30px; border:none ">Đặt vé</a>
                    </div>
                    <div class="col-md-6">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs content -->

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist" style="background-color:green;padding:10px;align-items:center;border-radius:10px">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Lịch chiếu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Bình luận</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Phim khác</a>
            </li>
        </ul>
        @*<hr style="height:1px;opacity:1; border:none;color:green;background-color:green;" />*@
        <div class="container" style="padding:10px; border: 1px solid green; border-radius:15px">
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <div class="row">
                        @foreach (var item in (List<Website_Dat_Ve.Models.ScheduleVM>)@ViewBag.Schedule)
                        {
                            { Html.RenderPartial("_SchedulePartial", item); }
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <h4 style="color:red">Chức năng đang được cập nhật!</h4>
                </div>
                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                    <div class="row">
                        @foreach (var item in (List<Website_Dat_Ve.Models.MovieVM>)@ViewBag.OtherMovie)
                        {
                            { Html.RenderPartial("_OtherMoviePartial", item); }
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Tabs content -->
    </div>
    <script>
        $('#myTab a').on('click', function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    </script>
</body>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

